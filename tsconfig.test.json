{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "types": ["node", "@jest/globals"],
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "paths": {
      "@/*": ["./*"]
    },
    "baseUrl": ".",
    "resolveJsonModule": true
  },
  "include": [
    "test/**/*.ts",
    "lib/**/*.ts",
    "app/**/*.ts",
    "components/**/*.ts",
    "next-env.d.ts",
    "typechain-types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "scripts",
    "hardhat.config.ts",
    "contracts",
    ".next"
  ]
}

