{
  "name": "agenthub-protocol",
  "version": "1.0.0",
  "private": true,
  "author": {
    "name": "Eras256",
    "email": "contact@agenthub.protocol"
  },
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "compile": "hardhat compile",
    "test": "hardhat test",
    "test:api": "jest test/iot-api.test.ts",
    "test:all": "jest --testPathPattern='(test|__tests__)'",
    "test:coverage": "hardhat coverage",
    "test:gemini": "tsx scripts/test-gemini.ts",
    "deploy:fuji": "powershell -Command \"$envContent = Get-Content .env.local -Raw; if ($envContent -match 'DEPLOYER_PRIVATE_KEY[=\\s]+([^\\r\\n#]+)') { $env:DEPLOYER_PRIVATE_KEY = $matches[1].Trim(); npx hardhat run scripts/deploy.js --network fuji } else { Write-Host 'DEPLOYER_PRIVATE_KEY not found in .env.local'; exit 1 }\"",
    "verify:fuji": "hardhat verify --network fuji",
    "e2e:fuji": "powershell -Command \"$envContent = Get-Content .env.local -Raw; if ($envContent -match 'DEPLOYER_PRIVATE_KEY[=\\s]+([^\\r\\n#]+)') { $env:DEPLOYER_PRIVATE_KEY = $matches[1].Trim(); npx hardhat run scripts/e2e-transactions.js --network fuji } else { Write-Host 'DEPLOYER_PRIVATE_KEY not found in .env.local'; exit 1 }\"",
    "postinstall": "node scripts/patch-ethers.js && node scripts/patch-pnpm-ethers.js || true"
  },
  "dependencies": {
    "@google/generative-ai": "^0.2.1",
    "@tanstack/react-query": "^5.17.0",
    "@thirdweb-dev/chains": "^0.1.120",
    "@thirdweb-dev/react": "^4.9.4",
    "@thirdweb-dev/sdk": "^4.0.0",
    "clsx": "^2.0.0",
    "framer-motion": "^10.16.16",
    "lucide-react": "^0.303.0",
    "next": "14.0.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "recharts": "^2.10.3",
    "tailwind-merge": "^2.2.0",
    "thirdweb": "^5.70.0",
    "viem": "^2.21.50",
    "zustand": "^4.4.7"
  },
  "devDependencies": {
    "@jest/globals": "^30.2.0",
    "@nomicfoundation/hardhat-ethers": "^3.0.0",
    "@nomicfoundation/hardhat-toolbox": "^4.0.0",
    "@nomicfoundation/hardhat-verify": "^2.0.3",
    "@openzeppelin/contracts": "^5.0.1",
    "@types/jest": "^30.0.0",
    "@types/node": "^20",
    "@types/react": "^18",
    "autoprefixer": "^10.4.16",
    "chai": "^4.3.10",
    "dotenv": "^16.3.1",
    "eslint": "^8.56.0",
    "eslint-config-next": "14.0.4",
    "ethers": "^6.16.0",
    "ethers-v5": "npm:ethers@5.7.2",
    "hardhat": "^2.19.4",
    "hardhat-gas-reporter": "^1.0.9",
    "jest": "^30.2.0",
    "jest-environment-node": "^30.2.0",
    "patch-package": "^8.0.1",
    "postcss": "^8.4.32",
    "postinstall-postinstall": "^2.1.0",
    "solidity-coverage": "^0.8.5",
    "tailwindcss": "^3.4.0",
    "ts-jest": "^29.4.6",
    "ts-node": "^10.9.2",
    "tsx": "^4.21.0",
    "typescript": "^5"
  }
}
